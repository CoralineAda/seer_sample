<h2>Area Chart Example</h2>

<div id="my_area_chart"></div>

<%= raw Seer::visualize(
      @data, 
      :as => :area_chart,
      :in_element => 'my_area_chart',
      :series => {
        :series_label => 'name',
        :data_label => 'date',
        :data_method => 'quantity',
        :data_series => @series
      },
      :chart_options => { 
        :height => 300,
        :width => 1000,
        :axis_font_size => 11,
        :legend => 'right',
        :colors => [],
        :title => "Widget Quantities",
        :point_size => 5
      }
     )
 -%>

