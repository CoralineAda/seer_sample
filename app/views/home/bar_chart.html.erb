<h2>Bar Chart Example</h2>

<div id="my_bar_chart"></div>

<%= Seer::visualize(
      @widgets, 
      :as => :bar_chart,
      :in_element => 'my_bar_chart',
      :series => {:series_label => 'name', :data_method => 'quantity'},
      :chart_options => {
        :height => 300,
        :width => 900,
        :is_3_d => false,
        :legend => 'none',
        :colors => ["#990000"],
        :title => "Widget Quantities",
        :title_x => 'Current Quantity'
      }
    )
 -%>

