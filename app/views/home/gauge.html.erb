<h2>Gauge Example</h2>

<div id="my_gauges"></div>

<%= raw Seer::visualize(
      @data, 
      :as => :gauge,
      :in_element => 'my_gauges',
      :series => {:series_label => 'name', :data_method => 'quantity'},
      :chart_options => {
        :green_from => 0,
        :green_to => 50,
        :height => 300,
        :max => 100,
        :min => 0,
        :minor_ticks => 5,
        :red_from => 76,
        :red_to => 100,
        :width => 600,
        :yellow_from => 51,
        :yellow_to => 75
      }
    )
 -%>

